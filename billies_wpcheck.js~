// check

(function(){
	var inputItem = [],
		item = document.getElementsByClassName('billies-wpcheck-item'),
		checkItem = document.checkform.chk,
		i,

		mycheck, disp_setting_btn, ok_btn, save_btn, 
		read_btn, reset_btn, menu_box, setting_btn,
		settingBtn_rect, pageY, pageYpx
	;

	ok_btn = document.getElementById('ok-btn');
	save_btn = document.getElementById('save-btn');
	read_btn = document.getElementById('read-btn');
	reset_btn = document.getElementById('reset-btn');
	menu_box = document.getElementById('billies-wpcheck-menu-box');
	setting_btn = document.getElementById('billies-wpcheck-setting-btn');

  window.addEventListener( 'scroll', function () {
	// 画面での位置
	settingBtn_rect = setting_btn.getBoundingClientRect();
    pageY = window.pageYOffset + 20;
    console.log(pageY);
    pageYpx = (Math.floor(pageY)).toString() + 'px';
    
	setting_btn.style.top = pageYpx;
	menu_box.style.top = pageYpx;

  }, false);

	mycheck = function () {
		for (i=0; i < checkItem.length; i++) {
			if (checkItem[i].checked) {
				inputItem[i] = true;
			} else {
				inputItem[i] = false;
			}
		}
		for (i=0; i < checkItem.length; i++) {
			if (inputItem[i]) {
				item[i].style.display = "none";
			}
			// console.log(i.toString() + ': ' + inputItem[i]);
		}

	};

	disp_setting_btn = function () {
		// var elem = document.getElementById('billies-wpcheck-setting-btn'),
		//	menu_box = document.getElementById('billies-wpcheck-menu-box');

		setting_btn.style.display = "block";
		menu_box.style.display = "none";
	};

	ok_btn.onclick = function() {
		mycheck();
		disp_setting_btn();
	};
	save_btn.onclick = function() {
		var setjson = JSON.stringify(inputItem);
		// alert(setjson);
		localStorage.setItem('key', setjson);
		disp_setting_btn();
	};
	read_btn.onclick = function() {
		var getjson = localStorage.getItem('key');
		inputItem = JSON.parse(getjson);
		// alert(getjson);
		for (i=0; i < checkItem.length; i++) {
			if (inputItem[i]) {
				item[i].style.display = "none";
			}
		}
		disp_setting_btn();
	};
	reset_btn.onclick = function() {
		for (i=0; i < checkItem.length; i++) {
			inputItem[i] = false;
			checkItem[i].checked = false;
			item[i].style.display = "block";
		}
		disp_setting_btn();
	};
	setting_btn.onclick = function() {
		console.log('clicked!');
		setting_btn.style.display = "none";
		menu_box.style.display = "block";
	};

})();

