function billies_wp_check_add_files () {
  wp_enqueue_style('css-billies-wp-check', plugins_url('billies_wpcheck.css', __FILE__));
  wp_enqueue_script('js-billies-wp-check', plugins_url('billies_wpcheck.js', __FILE__), array(), false, false);
}
add_action('wp_enqueue_scripts', 'billies_wp_check_add_files');


